# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
NPM_PACKAGE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/user_management_db
MONGODB_TEST_URI=mongodb://localhost:27017/user_management_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Email Configuration (Optional - for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Cors Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m
LOG_FILE_ENABLED=true

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_EXPIRES=3600000

# Admin Default User (for seeding)
DEFAULT_ADMIN_NAME=Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@yourapp.com
DEFAULT_ADMIN_PASSWORD=Admin@123